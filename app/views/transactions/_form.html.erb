<%= render "layouts/errors", :object => @transaction %>

<%= form_for [@stock, @transaction] do |f| %>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, value: format_number(@transaction.default_price), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :trade_type %>
    <%= f.select :trade_type, transaction_select_options(Transaction::TRANSACTION_TYPES), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, value: current_date, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-default" %>
<% end %>
